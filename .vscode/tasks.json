{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd build/debug && make all",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "echo": false,
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${cwd}/build/debug/game.app",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "echo": false,
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
